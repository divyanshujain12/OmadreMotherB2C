<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="presenter"
            type="com.android.omadre.activities.HelpActivity" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.android.omadre.activities.HelpActivity">

        <include layout="@layout/customized_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="@dimen/twenty_dp">

            <com.androidlib.CustomFontViews.CustomButtonRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bottom_shadow_bg"
                android:text="@string/call_support"
                android:textColor="@color/white"
                android:textSize="@dimen/sixteen_sp" />


            <com.androidlib.CustomFontViews.CustomButtonRegular
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fifty_dp"
                android:background="@drawable/bottom_shadow_bg"
                android:text="@string/email_support"
                android:textColor="@color/white"
                android:textSize="@dimen/sixteen_sp" />
        </LinearLayout>
    </LinearLayout>
</layout>