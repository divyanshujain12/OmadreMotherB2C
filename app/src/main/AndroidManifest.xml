<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.omadre">

    <application
        android:name=".GlobalClasses.MyApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activities.SignupActivity" />
        <activity
            android:name=".activities.NavigationDrawerActivity"
            android:label="@string/title_activity_navigation_drawer"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".activities.BottomNavigationActivity"
            android:label="@string/title_activity_bottom_navigation" />
        <activity android:name=".activities.OrderBarcodeActivity" />
        <activity android:name=".activities.RecordActivity" />
        <activity android:name=".activities.FeedActivity" />
        <activity android:name=".activities.HelpActivity" />
        <activity android:name=".activities.LoginActivity" />
        <activity android:name=".activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.TutorialActivity" />
        <activity android:name=".activities.IntroActivity" />
        <activity android:name=".activities.DeliverActivity" />
        <activity android:name=".activities.CreateRecordActivity"></activity>
    </application>

</manifest>